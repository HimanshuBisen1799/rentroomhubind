<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/images/postUploads/logo/logo.jpg">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.2.0/fonts/remixicon.css" rel="stylesheet">
  <style>
    #nav{
    width: 100vw;
    position: relative;
    padding: 1vw 2vw;
    box-shadow: 5px 5px 5px rgb(82, 75, 75);
  }
  #nav #logo{
    position: absolute;
    height: 90%;
    left: 1%;
    top: 1%;
    margin-left: 2vw;
  }
  #nav li{
    padding: 0.4vh 2vw;
  }
  #nav li>a{
    color: #000;
    font-size: 1.5vw;
  
  }




  /* Mobile menu button styling */
#mobile-menu-button {
    display: none;
    flex-direction: column;
    cursor: pointer;
    padding: 10px;
}

.bar {
    width: 25px;
    height: 3px;
    background-color: #000;
    margin: 3px 0;
}

/* Media query for mobile devices */
@media (max-width: 768px) {
  #nav{
    position: relative;
    height: 7vh;
  }
    #nav ul {
        display: none;
        flex-direction: column;
        position: absolute;
        top: 60px;
        right: 0;
        background-color: #fff; /* Background color for the mobile menu */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 10px;
        width: 200px;
        z-index: 1;
    }

    #nav ul.active {
        display: flex;
    }

    #mobile-menu-button {
        display: flex;
        color: #d01515;
        position: absolute;
        top: 2%;
        right: 4%;
        height: 80%;
      
    }

    #nav li {
        padding: 10px;
        text-align: right;
    }
}

  </style>
</head>
<body>
    <div id="nav">
     
    <i id="mobile-menu-button" class="ri-menu-line"></i>
        <img  id="logo" src="logo.jpg" alt="">
       <ul class="nav justify-content-end">
         <li class="nav-item">
           <a class="nav-link active" href="/index">Home</a>
         </li>
         <li class="nav-item">
           <a class="nav-link" href="/findroom">Find Rooms</a>
         </li>
         <li class="nav-item">
           <a class="nav-link" href="/listroom">List ads</a>
           <ul class="nav justify-content-end">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/index">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/findroom">Find Rooms</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/listroom">List Ads</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/save">Save Ads</a>
            </li>
            <% if (loggedInUser) { %>
              <li class="nav-item">
                <a class="nav-link fw-semibold" href="/profile">Hello <%= loggedInUser.username %></a>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
            <% } %>
          </ul>
          
       </ul>
     </div>
     <script src="../../javascripts/nav.js">
     document.addEventListener("DOMContentLoaded", function () {
        const mobileMenuButton = document.getElementById("mobile-menu-button");
        const navMenu = document.querySelector("#nav ul");

        mobileMenuButton.addEventListener("click", function () {
            navMenu.classList.toggle("active");
        });
    });
     </script>
     <script>
      
     </script>
</body>
</html>