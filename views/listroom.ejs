<script>
  function handleImageChange(input) {
      const file = input.files[0];
      const allowedFormats = ['image/jpeg', 'image/jpg'];

      const imgDiv = document.getElementById('img-div');

      if (file) {
          if (allowedFormats.includes(file.type)) {
              // Image uploaded successfully
              console.log('Image uploaded successfully:', file.name);

              // Create a success message for the specific image
              const successDiv = document.createElement('div');
              successDiv.textContent = 'Image uploaded successfully!';
              successDiv.style.color = 'green';

              // Change the background color of the corresponding image div
              const currentImgDiv = input.parentNode;
              currentImgDiv.style.backgroundColor = '#e6ffe6'; // Light green background

              // Remove the <i> tag from the corresponding image div
              const iconTag = currentImgDiv.querySelector('i');
              if (iconTag) {
                  currentImgDiv.removeChild(iconTag);
              }

              // Append the success message to the corresponding image div
              currentImgDiv.appendChild(successDiv);
          } else {
              // Display error message for invalid format
              alert('Please upload only JPG format images.');
              // Clear the file input
              input.value = '';
          }
      }
  }
</script>

